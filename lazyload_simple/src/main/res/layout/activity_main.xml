<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 内容 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white" />

    <!-- 底部RadioGroup -->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_tab_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_1"
            style="@style/tab_main_style"
            android:drawableTop="@drawable/index_1"
            android:text="@string/index_1" />

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/tab_main_style"
            android:drawableTop="@drawable/index_2"
            android:text="@string/index_2" />

        <RadioButton
            android:id="@+id/rb_3"
            style="@style/tab_main_style"
            android:drawableTop="@drawable/index_3"
            android:text="@string/index_3" />

        <RadioButton
            android:id="@+id/rb_4"
            style="@style/tab_main_style"
            android:drawableTop="@drawable/index_4"
            android:text="@string/index_4" />
    </RadioGroup>
</LinearLayout>